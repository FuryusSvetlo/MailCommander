				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPRIGHT" x="0" y="26"/>
				</Anchors>
				<Scripts>
					<OnEnter>
						MailCommander:OnHelpEnter(self)
					</OnEnter>
					<OnLeave>
						MailCommander:CloseTip()
					</OnLeave>
					<OnLoad>
						self:SetNormalTexture("Interface\\Buttons\\UI-MicroButton-MainMenu-Up");
						self:SetPushedTexture("Interface\\Buttons\\UI-MicroButton-MainMenu-Up");
						self:SetDisabledTexture("Interface\\Buttons\\UI-MicroButton-MainMenu-Up");
					</OnLoad>
				</Scripts>
			</Button>
			<Frame parentArray="Items" inherits="MailCommanderItemTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" x="10" y="-60"/>
