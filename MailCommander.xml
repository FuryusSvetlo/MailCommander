							</Anchors>
						</FontString>
						<Texture file="Interface\Buttons\UI-PageButton-Background">
							<Size x="32" y="32"/>
							<Anchors>
								<Anchor point="CENTER" x="0" y="1"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>
						MailCommander:OnArrowsClick(self,'next')
