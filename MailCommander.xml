				</Anchors>
			</Frame>
			<Button parentKey="Send" inherits="UIPanelButtonTemplate" text="SEND_LABEL" hidden="true">
				<Size x="120" y="30"/>
				<Anchors>
					<Anchor point="TOPRIGHt" relativePoint="TOPRIGHT" x="-15" y="-28"/>
				</Anchors>
				<Scripts>
					<OnClick>
						MailCommander:OnSendClick(self,button)
					</OnClick>
					<OnEnter>
						MailCommander:OnSendEnter(self)
					</OnEnter>
				</Scripts>
			</Button>
			<Button parentKey="Delete" inherits="UIPanelButtonTemplate" text="REMOVE" hidden="true">
				<Size x="120" y="30"/>
				<Anchors>
					<Anchor point="TOPRIGHt" relativePoint="TOPRIGHT" x="-15" y="-28"/>
				</Anchors>
				<Scripts>
					<OnClick>
						MailCommander:OnDeleteClick(self,button)
					</OnClick>
					<OnEnter>
						MailCommander:OnDeleteEnter(self)
					</OnEnter>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				MailCommander:OnLoad(self)
			</OnLoad>
			<OnSHow>
				if not SendMailFrame:IsVisible() then
					PanelTemplates_DisableTab(self,2)
				end
			</OnSHow>
			<OnHide>
				CloseAllBags(self)
			</OnHide>
			<OnReceiveDrag>
			</OnReceiveDrag>
			<OnMouseWheel>
			</OnMouseWheel>
		</Scripts>
